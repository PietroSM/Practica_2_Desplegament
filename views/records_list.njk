{% extends "base.njk" %}

{% block titol %} Records | Llistat {% endblock %}

{% block contingut %}
    <h1 class="mb-4">Llistat de Records</h1>

    <div class="form-group">
        <form action="/records/find" method="get">
            <input type="text" name="surname"/>
            <button type="submit" class="btn btn-dark">Cercar</button>
        </form>
    </div>

    <table class="table table-striped table-hover">
        {% for record in records %}   
            <tr>
                <td>{{ record.patient.name }}</td>
                <td>{{ record.patient.surname }}</td>
                <td>{{ record.medicalRecord }}</td>
                <td>
                    <a class="btn btn-success" href="/records/{{ record.id }}">Fitxa</a>
                </td>
                <td>
                    <form style="display:inline" action="/records/{{ record.id }}" method="post">
                        <input type="hidden" name="_method" value="delete" />
                        <button type="submit" class="btn btn-danger">Esborrar</button>
                    </form>
                </td>
            </tr>

        {% endfor %}
    </table>
{% endblock %}